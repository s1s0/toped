/** check points
 * @param sample test item to check
 * @param template sample should match the template
 * @return if the two points are identical the functions returns TRUE
 */
bool check_point (point sample, point template) {
  bool ret = false;

  //points can only be equal within an epsilon environment
  //or the values are for example REAL_pINF -- then no epsilon 
  //is allowed
  //--> geometry.tll has to be included
  if ( ((sample.x == template.x) &&
	(sample.y == template.y)) ||
       points_equal (sample, template)) {
    ret = true;
  }
  return (ret);
}

void check_point_echo (point sample, point template) {
  if (check_point (sample, template)) {
    echo ("Test OK");
  } else {
    echo ("Test FAILED");
  }
}
