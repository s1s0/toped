/* ATTENTION: for following overloaded functions the order of
   definition might be of importance ! --> has to be checked */

//overloaded version for BOOL
bool check_compare_data (bool a, bool b) {
  bool ret = false;
  if (a == b) ret = true;
  return (ret);
}

//overloaded version for INT
bool check_compare_data (int a, int b) {
  bool ret = false;
  if (a == b) ret = true;
  return (ret);
}

//overloaded version for REAL
// functions allowes to return TRUE if a and b are close
// withing a certain error range (because of rounding errors)
// ATTENTION: for now, the error might be 1e-9 !
bool check_compare_data (real a, real b) {
  bool ret = false;
  real error = abs(a/1e9);

  if (a == 0.0) error = 1e-9;

  if ((a+error) > b && (a-error) < b) ret = true;
  //if (a == b) ret = true;
  return (ret);
}

/** check data types
 * Since points are real values the functions check returns true if
 * the minimum distance falls below EPS (defined in
 * "technology/default_drc.tll") 
 * @param sample test item to check
 * @param template sample should match the template
 * @return if the two points are identical the functions returns TRUE
 */
bool check_compare_data (point sample, point template) {
  bool ret = false;

  //points can only be equal within an epsilon environment
  //or the values are for example REAL_pINF -- then no epsilon 
  //is allowed
  //--> geometry.tll has to be included
  if ( ((sample.x == template.x) &&
	(sample.y == template.y)) ||
       points_equal (sample, template)) {
    ret = true;
  }
  return (ret);
}



//echos a human readable version of the upper defined comparison checks
//overloaded version for BOOL
void check_compare_data_echo (bool sample, bool template) {
  if (check_compare_data (sample, template)) {
    echo ("Test OK");
  } else {
    echo ("Test FAILED");
  }
}

//overloaded version for INT
void check_compare_data_echo (int sample, int template) {
